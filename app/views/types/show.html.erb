<%= link_to 'Add a business', new_type_business_path(@type), class: "btn btn-default stretch" %>

<h4><%= @type.name %> Businesses:</h4>

<ul class="list-unstyled businesses-list">
  <% @businesses.each do |business| %>
    <%= link_to type_business_path(@type, business) do %>
      <li>
        <span class="name"><%= business.name %></span>

        <%= link_to ' Delete', type_business_path(@type, business), data: {confirm: "Are you sure?", method: "delete"}, class: "text-danger delete" %>

        <%= link_to 'Edit', edit_type_business_path(@type, business), class: "edit" %>
      </li>
    <% end %>
  <% end %>
</ul>
